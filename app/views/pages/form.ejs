<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/form.css" type="text/css">
    
    <title><%= funcao %></title>
</head>
<body>
    <% const msgErro = {"nome_funcionario":"", funcao_funcionario: "", salario_funcionario: ""}; %>
        
    <% if(listaErros){ %>
        <% listaErros.errors.forEach((itemErro)=>{ %>
            <% msgErro[itemErro.path] = itemErro.msg; %>
        <% }); %>
    <% } %>

    <% console.log(msgErro);%>

    <form action="/<%=acao%>" method="post" id="formulario">
        <fieldset>
            <legend><%= funcao %></legend>

            <input type="hidden" name="id_funcionario" value="<%= dados.id_funcionario %>">
    
            <label for="nome">Nome</label>
            <input type="text" name="nome_funcionario" id="nome" value="<%= dados.nome_funcionario %>">
            <%= <span>msgErro.nome_funcionario.msg </span> %>

            <label for="funcao">Função</label>
            <input type="text" name="funcao_funcionario" id="funcao" value="<%= dados.funcao_funcionario %>">
            <%= <span>msgErro.funcao_funcionario.msg </span> %>

            <label for="funcao">Salário</label>
            <input type="number" name="salario_funcionario" id="salario" value="<%= dados.salario_funcionario %>" step="0.010">
            <%= <span>msgErro.salario_funcionario.msg </span> %>

            <div style="display: flex; justify-content: center; align-items: center; gap: 10px; margin-top: 15px;">
                <button class="form-btn" type="submit">Pronto!</button>
                <button class="form-btn" type="reset">Limpar</button>
            </div>
        </fieldset>
    </form>
</body>
</html>