<div class="divTable">
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Função</th>
          <th>Salário</th>
        </tr>

        <% console.log(lista_funcionarios); for (let funcionario of lista_funcionarios) { %>
          <tr>
            <th>
              <%= funcionario.nome_funcionario %>
            </th>

            <th>
              <%= funcionario.funcao_funcionario %>
            </th>

            <th>
              R$ <%= String(funcionario.salario_funcionario).replace('.', ',') %>
            </th>

            <th class="acao" onclick=<%="window.location='/editar?id="+ funcionario.id_funcionario+"'" %>>
              <button class="btn-table edit">Editar</button>
            </th>
            <th class="acao" onclick=<%=" window.location='/excluir?id="+ funcionario.id_funcionario+"'" %>>
              <form action="/delete" method="post">
                <button class="btn-table delete" type="submit">Excluir</button>
              </form>
            </th>
          </tr> 
        <% }; %>
      </thead>
      <tbody>
      </tbody>
    </table>
</div>